<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/gray_300"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Logo/Avatar del Proveedor -->
        <ImageView
            android:id="@+id/iv_supplier_logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_business_24"
            android:background="@drawable/circle_background_primary"
            android:padding="14dp"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Indicador de Estado (Online/Offline) -->
        <View
            android:id="@+id/indicator_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_background_success"
            app:layout_constraintEnd_toEndOf="@+id/iv_supplier_logo"
            app:layout_constraintBottom_toBottomOf="@+id/iv_supplier_logo" />

        <!-- Información Principal -->
        <TextView
            android:id="@+id/tv_supplier_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Pinturas Cóndor S.A."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/layout_rating"
            app:layout_constraintStart_toEndOf="@+id/iv_supplier_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_supplier_logo"
            tools:text="Pinturas Cóndor S.A." />

        <!-- Especialidades -->
        <TextView
            android:id="@+id/tv_specialties"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Pinturas • Impermeabilizantes • Acabados"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/layout_rating"
            app:layout_constraintStart_toEndOf="@+id/iv_supplier_logo"
            app:layout_constraintTop_toBottomOf="@+id/tv_supplier_name"
            tools:text="Pinturas • Impermeabilizantes • Acabados" />

        <!-- Ubicación -->
        <LinearLayout
            android:id="@+id/layout_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/layout_rating"
            app:layout_constraintStart_toEndOf="@+id/iv_supplier_logo"
            app:layout_constraintTop_toBottomOf="@+id/tv_specialties">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location_24"
                android:layout_marginEnd="6dp"
                app:tint="@color/gray_500" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Norte de Quito, 2.3 km"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Norte de Quito, 2.3 km" />

        </LinearLayout>

        <!-- Rating y Reviews -->
        <LinearLayout
            android:id="@+id/layout_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_supplier_logo">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_24"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/warning" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    tools:text="4.5" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_reviews_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="127 reseñas"
                android:textSize="11sp"
                android:textColor="@color/gray_500"
                tools:text="127 reseñas" />

        </LinearLayout>

        <!-- Separador -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_200"
            app:layout_constraintTop_toBottomOf="@+id/layout_location" />

        <!-- Información Comercial -->
        <LinearLayout
            android:id="@+id/layout_commercial_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <!-- Tiempo de Entrega -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_schedule_24"
                    android:layout_marginBottom="4dp"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrega"
                    android:textSize="11sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="24-48h"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    tools:text="24-48h" />

            </LinearLayout>

            <!-- Descuento Promedio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_local_offer_24"
                    android:layout_marginBottom="4dp"
                    app:tint="@color/success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descuento"
                    android:textSize="11sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_discount_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="5-8%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    tools:text="5-8%" />

            </LinearLayout>

            <!-- Garantía -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_verified_24"
                    android:layout_marginBottom="4dp"
                    app:tint="@color/info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garantía"
                    android:textSize="11sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_warranty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="12 meses"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    tools:text="12 meses" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/layout_commercial_info">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_call_supplier"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_phone_24"
                app:iconSize="18dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_whatsapp_supplier"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_message_24"
                app:iconSize="18dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_catalog"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Ver"
                android:textSize="12sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_visibility_24"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>