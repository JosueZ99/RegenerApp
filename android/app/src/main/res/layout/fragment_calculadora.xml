<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".ui.calculadora.CalculadoraFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_calculate_24"
                    android:background="@drawable/circle_background_primary"
                    android:padding="16dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculadoras Especializadas"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona el tipo de cálculo que necesitas realizar"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:textAlignment="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Selector de Tipo de Calculadora -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Calculadora"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginBottom="16dp" />

                <!-- Dropdown de Categorías -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_category_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Selecciona categoría"
                        android:inputType="none"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dropdown de Tipos Específicos -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_type_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Selecciona tipo específico"
                        android:inputType="none"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Formulario Dinámico -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_calculator_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <!-- El contenido se genera dinámicamente -->
            <LinearLayout
                android:id="@+id/container_calculator_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_form_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculadora de Pintura"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginBottom="16dp" />

                <!-- Los campos se agregan dinámicamente aquí -->

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de Acción -->
        <LinearLayout
            android:id="@+id/layout_action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calculate"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_calcular"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Limpiar"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Resultado del Cálculo -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_check_circle_24"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resultado del Cálculo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800" />

                </LinearLayout>

                <!-- Resultado Principal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cantidad Necesaria:"
                        android:textSize="16sp"
                        android:textColor="@color/gray_700" />

                    <TextView
                        android:id="@+id/tv_result_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.6 Litros"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        tools:text="15.6 Litros" />

                </LinearLayout>

                <!-- Costo Estimado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Costo Estimado:"
                        android:textSize="16sp"
                        android:textColor="@color/gray_700" />

                    <TextView
                        android:id="@+id/tv_result_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$468.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        tools:text="$468.00" />

                </LinearLayout>

                <!-- Botón Añadir al Presupuesto -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_to_budget"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_añadir_presupuesto"
                    android:textSize="16sp"
                    android:icon="@drawable/ic_add_24"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Detalles Adicionales (Expandible) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles del Cálculo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_calculation_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Espacio adicional para evitar que el bottom nav oculte el contenido -->
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>