<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/gray_300"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header de la tabla -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/warning"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_receipt_24"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gastos_reales"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_items_expenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 compras"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    tools:text="8 compras" />

            </LinearLayout>

            <!-- Filtros y bÃºsqueda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/gray_50">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_search_expenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Buscar compras..."
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_search_24"
                        android:drawablePadding="8dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_expenses"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_filter_list_24"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_date_filter"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_date_range_24"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Headers de columnas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/gray_100"
                android:padding="12dp"
                android:weightSum="11">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="Material"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cant."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="P. Unit."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Desc."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Prov."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Fecha"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Total"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Lista de gastos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_expenses_real"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_expense_real" />

            <!-- Footer con totales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/warning"
                android:padding="16dp">

                <!-- Subtotales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal:"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/tv_subtotal_expenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$8,950.00"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        tools:text="$8,950.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Descuentos:"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/tv_total_discounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-$710.00"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        tools:text="-$710.00" />

                </LinearLayout>

                <!-- Total -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:alpha="0.3"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TOTAL GASTADO:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_total_expenses_real"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$8,240.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        tools:text="$8,240.00" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>