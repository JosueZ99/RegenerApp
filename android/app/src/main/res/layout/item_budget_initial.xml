<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:weightSum="10">

    <!-- Material/Servicio -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pintura Látex Interior"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Pintura Látex Interior" />

        <TextView
            android:id="@+id/tv_material_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Construcción"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            android:background="@drawable/background_category_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            tools:text="Construcción" />

    </LinearLayout>

    <!-- Cantidad -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            tools:text="25.5" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Litros"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            tools:text="Litros" />

    </LinearLayout>

    <!-- Precio Unitario -->
    <TextView
        android:id="@+id/tv_unit_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="$15.50"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        android:textAlignment="center"
        android:layout_marginEnd="8dp"
        tools:text="$15.50" />

    <!-- Proveedor -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_supplier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinturas Cóndor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Pinturas Cóndor" />

        <!-- Rating del proveedor -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star_24"
                app:tint="@color/warning" />

            <TextView
                android:id="@+id/tv_supplier_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="4.5"
                android:textSize="10sp"
                android:textColor="@color/gray_600"
                tools:text="4.5" />

        </LinearLayout>

    </LinearLayout>

    <!-- Total -->
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="$395.25"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/success"
        android:textAlignment="center"
        android:layout_marginEnd="8dp"
        tools:text="$395.25" />

    <!-- Acciones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_menu_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/gray_500" />

    </LinearLayout>

</LinearLayout>