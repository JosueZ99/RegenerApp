<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:weightSum="11">

    <!-- Material -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_material_name_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pintura Látex Interior"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Pintura Látex Interior" />

        <TextView
            android:id="@+id/tv_material_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="PIN-001"
            android:textSize="11sp"
            android:textColor="@color/gray_500"
            android:background="@drawable/background_code_chip"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            tools:text="PIN-001" />

    </LinearLayout>

    <!-- Cantidad -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_quantity_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            tools:text="20" />

        <TextView
            android:id="@+id/tv_unit_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textSize="11sp"
            android:textColor="@color/gray_600"
            tools:text="L" />

    </LinearLayout>

    <!-- Precio Unitario -->
    <TextView
        android:id="@+id/tv_unit_price_expense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="$14.80"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/gray_800"
        android:textAlignment="center"
        android:layout_marginEnd="8dp"
        tools:text="$14.80" />

    <!-- Descuento -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_discount_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/success"
            tools:text="5%" />

        <TextView
            android:id="@+id/tv_discount_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$14.80"
            android:textSize="10sp"
            android:textColor="@color/success"
            tools:text="$14.80" />

    </LinearLayout>

    <!-- Proveedor -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_supplier_name_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cóndor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Cóndor" />

        <TextView
            android:id="@+id/tv_invoice_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#001-001-0001234"
            android:textSize="9sp"
            android:textColor="@color/gray_500"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="#001-001-0001234" />

    </LinearLayout>

    <!-- Fecha -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/01"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            tools:text="25/01" />

        <TextView
            android:id="@+id/tv_purchase_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="10sp"
            android:textColor="@color/gray_500"
            tools:text="14:30" />

    </LinearLayout>

    <!-- Total con comparación -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_total_price_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$281.20"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/success"
            tools:text="$281.20" />

        <!-- Indicador de ahorro/sobrecosto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_price_comparison"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_arrow_downward_24"
                android:layout_marginEnd="2dp"
                app:tint="@color/success" />

            <TextView
                android:id="@+id/tv_savings_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$18.80"
                android:textSize="9sp"
                android:textColor="@color/success"
                tools:text="$18.80" />

        </LinearLayout>

    </LinearLayout>

    <!-- Acciones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_menu_expense_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/gray_500" />

    </LinearLayout>

</LinearLayout>