<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/gray_300"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Estado del Proyecto -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En Diseño"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/status_design"
            app:chipCornerRadius="12dp"
            app:chipMinHeight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="En Diseño" />

        <!-- Nombre del Proyecto -->
        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Casa Familiar Los Cerezos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/chip_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Casa Familiar Los Cerezos" />

        <!-- Cliente -->
        <LinearLayout
            android:id="@+id/layout_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_project_name">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person_24"
                android:layout_marginEnd="8dp"
                app:tint="@color/primary_color" />

            <TextView
                android:id="@+id/tv_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Familia Rodríguez Pérez"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                tools:text="Familia Rodríguez Pérez" />

        </LinearLayout>

        <!-- Ubicación -->
        <LinearLayout
            android:id="@+id/layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/layout_client">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location_24"
                android:layout_marginEnd="8dp"
                app:tint="@color/primary_color" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quito, Pichincha"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                tools:text="Quito, Pichincha" />

        </LinearLayout>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Iluminación LED y arquitectónica para casa familiar de 3 plantas"
            android:textSize="13sp"
            android:textColor="@color/gray_600"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_location"
            tools:text="Iluminación LED y arquitectónica para casa familiar de 3 plantas" />

        <!-- Separador -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_200"
            app:layout_constraintTop_toBottomOf="@+id/tv_description" />

        <!-- Fechas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <!-- Fecha Inicio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Inicio"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="15 Ene 2025"
                    android:textSize="14sp"
                    android:textColor="@color/gray_800"
                    tools:text="15 Ene 2025" />

            </LinearLayout>

            <!-- Fecha Fin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Fin"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="30 Abr 2025"
                    android:textSize="14sp"
                    android:textColor="@color/gray_800"
                    tools:text="30 Abr 2025" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>